+int32_t LibfRdmaTransport::listenForConnections(const TransportInfo& tr_info) {
+    if (!m_running) {
+        m_running = true;
+        m_listener = std::thread([=] () {
+                try {
+                    listen_for_connections(tr_info);
+                }
+                catch(const std::exception& e) {
+                    FABRIC_ERROR_MESSAGE("RDMA listener error: %s\n", e.what());
+                }
+                catch(...) {
+                    FABRIC_ERROR_MESSAGE("RDMA listener unknown error\n");
+                }
+                FABRIC_DEBUG_MESSAGE("RDMA listener shutting down\n");
+                printf("\n!!!! RDMA listener shut down\n\n");
+            });
+    }
+    return 0;
+}

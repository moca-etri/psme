+    std::lock_guard<std::mutex> lock(m_mtx);
+
+    for (auto& it : m_registered_events_map) {
+
+        if (it.second.first->m_handle_id == device_handle_id) {
+
+            fd = it.second.second->m_fd;
+
+            return FPGA_OK;
+        }
+    }
+

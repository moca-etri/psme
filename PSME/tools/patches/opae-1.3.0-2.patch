+int32_t FabricEndpoint::adminRequestHandler(FabricHandle connection_handle, RequestCapsule& req_capsule, DataBuffer data_buffer)
+{
+
+    DeviceHandle device_handle  = req_capsule.header->deviceHandle;
+    int32_t status = 0;
+    ResponseCapsule resp_capsule;
+    ResponseHeader  resp_header;
+    Request device_request;
+	Response device_response;
+    memset(&device_request, 0, sizeof(device_request));
+    char* host_data = nullptr;
+    uint64_t dev_num = 0;
+    uint64_t app_context{0};
+    uint32_t flags{0};
+
+    resp_capsule.header = NULL;
+    resp_capsule.hostData = NULL;
+
+    FABRIC_DEBUG_REM_OP("\t%s : %s\n", __FILE__,__func__);
+    device_request.cmd = req_capsule.header->command;
+    device_request.cmdTag = 0;
+
+	device_response.rsp = device_request.cmd;
+	device_response.size = 0;
+	device_response.data = nullptr;
+
+    resp_capsule.header = &resp_header;
+    RESET_RESPONSE_HEADER(resp_capsule.header, req_capsule.header);
+    resp_capsule.header->status = FabricStatus::ERROR;
+
+    auto session = open_sessions.get_session_by_connection_id(connection_handle);
+
+    if(!session) {
+        FABRIC_WARNING_MESSAGE("Invalid session handle: %d\n", connection_handle);
+        return -1;
+    }
+
+    switch(device_request.cmd) {
+    case FABRIC_OPEN_DEVICE: {
+        host_data = req_capsule.hostData;
+        READ_DATA_INCR(host_data, dev_num);
+        READ_DATA_INCR(host_data, app_context);
+        READ_DATA_INCR(host_data, flags);
+        device_request.cmdTag = requestMap.addEntry(connection_handle, req_capsule.header->commandTag, req_capsule.header, data_buffer);
+
+        auto fabric_status = targetCallbackHandlers.fbDeviceOpenHandler(connection_handle, dev_num, app_context, &device_handle, flags, &device_request, &device_response);
+        if(fabric_status != FabricStatus::ERROR) {
+            // Review maintaining state info with FabricDevice on target

+/*!
+ * Simple synchronization object, which allows one thread signal other thread(s)
+ * of some event occurence.
+ */
+class Event {
+public:
+
+    /*!
+     * Constructor
+     * @param auto_reset Automatically resets signaled state after successful wait
+     */
+    Event(bool auto_reset = true) : m_auto_reset(auto_reset) {}
+
+    /*!
+     * wait for the object to become signaled
+     */
+    void wait() {
+        std::unique_lock<std::mutex> lk(m_mutex);
+        m_condition.wait(lk, [=](){ return m_state;});
+        if (m_auto_reset) {
+            m_state = false;
+        }
+    }
+
+    /*!
+     * wait for the object to become signaled
+     * @param timeout how long to wait for signaled state
+     * @return true if signaled within specified timeout,
+     *         false otherwise
+     */
+    bool wait_for(std::chrono::milliseconds timeout) {
+        std::unique_lock<std::mutex> lk(m_mutex);
+        const auto success = m_condition.wait_for(lk, timeout, [=](){ return m_state;});
+        if (success && m_auto_reset) {
+            m_state = false;
+        }
+        return success;
+    }
+
+    /*!
+     * Signal the event.
+     * If auto_reset is true, only one thread waiting for the event is waken
+     * up, if auto_reset is false all waiting thread can be waken up.
+     */
+    void set() {
+        std::unique_lock<std::mutex> lk(m_mutex);
+        m_state = true;
+        m_condition.notify_all();
+    }
+
+    /*!
+     * Resets signaled state
+     */
+    void reset() {
+        std::unique_lock<std::mutex> lk(m_mutex);
+        m_state = false;
+    }
+
+private:
+
+    std::mutex m_mutex{};
+    std::condition_variable m_condition{};
+    bool m_auto_reset;
+    bool m_state{false};
+};

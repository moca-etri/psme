+// session has an admin Q and one or more data Qs
+// for admin Q, session handle == connection handle
+// for data  Q, session handle != connection handle, session handle == connection handle-of-admin Q
+// Called by Initiator,
+//      initiate a connection to target, and
+//      mark as admin Q if session handle==0 (new session),
+//      target returns a new/unique session handle for admin Q requests
+//
+//      for data Q requests, a valid target-session-handle (associated with admin Q) is required,
+//      target returns the same target-session-handle and can be ignored.
+FabricHandle FabricEndpoint::fabricConnect(FabricHandle session_handle, const ConnectionInfo& connection_info)
+{
+    RequestCapsule req_capsule{};
+    RequestHeader  req_header{};
+
+    FabricHandle target_session_handle = 0;
+    FabricHandle connection_handle = -1;
+    const auto admin_queue = (session_handle == 0);
+    uint16_t qid = 0;
+
+    FABRIC_DEBUG_REM_OP("\t%s : %s, session: %d\n", __FILE__,__func__, session_handle);
+
+    SessionQueuePtr data_queue{};
+
+    if(!admin_queue) {
+        if (auto session = open_sessions.get_session(session_handle)) {
+            //target session handle to associate data queue with.
+            target_session_handle = session->targetSessionHandle;
+            if (data_queue = session->open_queues.create_queue()) {
+                qid = data_queue->get_queue_id();
+            }
+            else {
+                FABRIC_WARNING_MESSAGE("Failed to add data queue: %d.\n", session_handle);
+                return -1;
+            }
+        } else {
+            FABRIC_WARNING_MESSAGE("Invalid session handle: %d.\n", session_handle);
+            return -1;
+        }
+    } else {
+        qid = 0;
+        target_session_handle = 0;
+    }
+
+    // Initiate Connect request
+    //Review, need to implement validators
+    if(!isValidProtocol(connection_info.transportInfo.protocol)) {
+        FABRIC_WARNING_MESSAGE("Unknown protocol provided.\n");
+        return -1;
+    }
+
+    req_capsule.header = &req_header;
+    RESET_REQUEST_HEADER(req_capsule.header,
+                         fpgaof_fabric_command::FPGAOF_FABRIC_CMD_CONNECT,
+                         COMMAND_TYPE_FABRIC,
+                         CAPSULE_DIRECTION_TARGET);
+
+    const auto data_size = sizeof(target_session_handle)
+                           + sizeof(m_endpoint_info[0].hostID)
+                           + sizeof(qid) + sizeof(connection_info.adminQueueSize)
+                           + connection_info.keyLength;
+    // Buffer pool not available yet.
+    auto buffer = std::unique_ptr<char[]>(new char[data_size]);
+    req_capsule.hostData = buffer.get();
+
+    auto data = req_capsule.hostData;
+    APPEND_DATA_INCR(data, target_session_handle);
+    APPEND_DATA_INCR(data, m_endpoint_info[0].hostID);
+    APPEND_DATA_INCR(data, qid);
+    APPEND_DATA_INCR(data, connection_info.adminQueueSize);
+    APPEND_N_DATA(data, connection_info.securityKey, connection_info.keyLength);
+    req_capsule.header->capsuleLength += data_size;
+
+    req_capsule.header->commandTag = requestMap.addEntry(0, 0, req_capsule.header, nullptr);
+    auto status = trFabricConnect(&connection_handle, &connection_info.transportInfo, &req_capsule, 0);
+    if(status != FabricStatus::SUCCESS) {
+        FABRIC_ERROR_MESSAGE("Connect to target service failed.\n");
+        requestMap.removeEntry(req_capsule.header->commandTag);
+        connection_handle = -1;
+        return connection_handle;
+    }
+
+    {
+        auto buffer_pool = bufferPoolMap.get_or_create(connection_handle);
+        FABRIC_ASSERT(buffer_pool != nullptr, "missing buffer pool\n");
+    }
+
+    if(admin_queue) {
+        session_handle = connection_handle; // admin Queue
+        auto session = open_sessions.create_session(InitiatorMode, session_handle, connection_info);
+        FABRIC_ASSERT(session != nullptr, "Failed to create session for session_handle: %d\n", session_handle);
+    } else {
+        // For data Queue, add new connection_handle to session
+        auto ret = data_queue->set_connection_id(connection_handle);
+        FABRIC_ASSERT(ret, "Failed to update connection id for qid: %d on session_handle: %d\n", qid, session_handle);
+    }
+
+    if (auto request_details = requestMap.wait_for_response(req_capsule.header->commandTag)) {
+        if(admin_queue) {
+            auto data = request_details->hostData.get();
+            READ_DATA(data, target_session_handle);
+            if (auto session = open_sessions.get_session(session_handle)) {
+                session->targetSessionHandle = target_session_handle;
+            }
+            else {
+                FABRIC_WARNING_MESSAGE("%s Error getting session %d\n", __func__, session_handle);
+                trFabricDisconnect(connection_handle, nullptr);
+                connection_handle = -1;
+            }
+        }
+    } else {
+        FABRIC_WARNING_MESSAGE("Error retrieiving response.\n");
+        trFabricDisconnect(connection_handle, nullptr);
+        connection_handle = -1;
+    }
+
+    requestMap.removeEntry(req_capsule.header->commandTag);
+
+    return connection_handle;
+}

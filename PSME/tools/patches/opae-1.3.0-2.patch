+void LibfRdmaTransport::listen_for_connections(const TransportInfo& tr_info)
+{
+    /* accept connections */
+    int ret = 0;
+    auto p_libf_context = LibfRdmaContextPtr(new LibfRdmaContext(EpType::PASSIVE));
+
+    FABRIC_DEBUG_OP("\t%s : %s\n", __FILE__,__func__);
+
+    ret = p_libf_context->initialize_fabric(tr_info);
+    if(ret) {
+        FABRIC_WARNING_MESSAGE("Error initializing LibFabric rdma interface: %s.\n", fi_strerror(-ret));
+        m_running = false;
+        return;
+    }
+
+    fi_eq_cm_entry entry{};
+    uint32_t event = 0;
+    int32_t ret_val = 0;
+    struct fi_eq_err_entry buf{};
+    char errstr[128];
+    FiInfo entry_fi{};
+
+    std::vector<LibfRdmaContextPtr> contexts{};
+
+    FABRIC_DEBUG_REM_OP("%s: Waiting for client connect request\n", __func__);
+
+    while(m_running) {
+
+        ret_val = fi_eq_sread(p_libf_context->eq.get(), &event, &entry, sizeof(entry), TIMEOUT.count(), 0);
+        if(ret_val == -FI_EAGAIN || ret_val == -FI_EINTR) {
+            continue;
+        }
+
+        // prevent memory leak
+        entry_fi.reset(entry.info, fi_freeinfo);
+
+        if (ret_val != sizeof(entry)) {
+            FABRIC_ERROR_MESSAGE("EQ listen/read, expected: %ld, received: %d, err: %s.\n",
+                                 sizeof(entry), ret_val, fi_strerror(-ret_val));
+            if (ret_val == -FI_EAVAIL) {
+                fi_eq_readerr(p_libf_context->eq.get(), &buf, 0);
+                FABRIC_ERROR_MESSAGE(" error_details: %s.\n",
+                        fi_eq_strerror(p_libf_context->eq.get(), buf.prov_errno,
+                                       buf.err_data, errstr, sizeof(errstr)));
+            }
+            //
+            // stop thread
+            //
+            break;
+        }
+
+        switch (event) {
+            case FI_CONNREQ: {
+                auto new_ctxt = LibfRdmaContextPtr(new LibfRdmaContext(EpType::ACTIVE));
+
+                // todo: this should be cleaned !!!
+                //       maybe new_ctxt->initialize_fabric(tr_info) instead,
+                //       but shared/separate event queue investigation needed;
+                {
+                    // !!! this one is differently initialized depending on ACTIVE vs PASSIVE case
+                    //     maybe this is why "sockets" provider does not work !!!!!!
+                    new_ctxt->fabric = p_libf_context->fabric;
+                    // todo: check if fi need to be initialized by get_info, or the one from entry suffices
+                    //       it is replaced by entry.info in next lines
+//                    new_ctxt->fi = p_libf_context->fi;
+                    new_ctxt->eq = p_libf_context->eq;
+
+                    // todo: following are not used anymore later
+                    new_ctxt->hints = p_libf_context->hints;
+                    new_ctxt->eq_attr = p_libf_context->eq_attr;
+                }
+
+                new_ctxt->fi = entry_fi;
+
+                ret = new_ctxt->initialize_domain();
+
+                if(ret < 0) {
+                    FABRIC_ERROR_MESSAGE("Error initializing domain: %s.\n", fi_strerror(-ret));
+                    fi_reject(p_libf_context->pep.get(), new_ctxt->fi->handle, nullptr, 0);
+
+                    continue;
+                }
+
+                new_ctxt->state = EpState::CONNECT_RCVD;
+
+                ret = fi_accept(new_ctxt->ep.get(), nullptr, 0);
+
+                if (ret < 0) {
+                    FABRIC_ERROR_MESSAGE("Error during accept: %s.\n", fi_strerror(-ret));
+                    fi_reject(p_libf_context->pep.get(), new_ctxt->fi->handle, nullptr, 0);
+
+                    continue;
+                }
+                new_ctxt->state = EpState::CONNECTING;
+
+                contexts.push_back(std::move(new_ctxt));
+            }
+            break;
+            case FI_CONNECTED:
+            {
+                auto it = std::find_if(std::begin(contexts), std::end(contexts),
+                                       [=] (const LibfRdmaContextPtr& context) {
+                                           return context->state == EpState::CONNECTING
+                                                  && &context->ep->fid == entry.fid;
+                                       });
+
+                if (it == std::end(contexts)) {
+                    FABRIC_WARNING_MESSAGE("Missing endpoint for CONNECTED event, received fid: %p\n", entry.fid);
+                }
+                else {
+
+                    auto ctxt = std::move(*it);
+
+                    contexts.erase(it);
+
+                    ctxt->state = EpState::CONNECTED;
+
+                    // Every new connection needs to be identified by an unique handle
+                    auto connection_handle = getNextConnectionID(get_transport_protocol());
+
+                    if(connection_handle <= 0) {
+                        FABRIC_ERROR_MESSAGE("Failed to assign new connection handle, shutting down fid: %p\n.", &ctxt->ep->fid);
+
+                        break;
+                    }
+
+                    if (auto queue = m_queues.create_queue(connection_handle)) {
+
+                        char *buffer_address = ctxt->rx_buf;
+                        //for (int32_t count_blk = 0; count_blk < ctxt->block_count; count_blk++, buffer_address += ctxt->block_size)
+                        for (int32_t count_blk = 0; count_blk < MAX_RDMA_RX_BUFFER_COUNT; count_blk++, buffer_address += ctxt->block_size) {
+                            // Post receive buffers
+                            ret = fi_recv(ctxt->ep.get(), buffer_address, ctxt->block_size, fi_mr_desc(ctxt->mr.get()), FI_ADDR_UNSPEC, buffer_address);
+                            if (ret < 0) {
+                                FABRIC_WARNING_MESSAGE("Error while posting receive buffers on endpoint %p, desc: %s, ittr = %d\n.",
+                                                       ctxt->ep.get(), fi_strerror(-ret), count_blk);
+                                m_running = false;
+                                //
+                                //  stop thread
+                                //
+                                return;
+                            }
+                        }
+
+                        queue->transportInfo = tr_info;
+                        queue->transport_context = std::move(ctxt);
+                        queue->queue_state = QueueState::QUEUE_STATE_RUN;
+
+                        queue->queue_listener = std::thread([ = ] (){
+                            try {
+                                queueListener(queue);
+                            }
+                            catch (const std::exception& e) {
+                                FABRIC_ERROR_MESSAGE("connection handle: %d error: %s", connection_handle, e.what());
+                            }
+                            catch (...) {
+                                FABRIC_ERROR_MESSAGE("connection handle: %d unknown error", connection_handle);
+                            }
+                            FABRIC_DEBUG_MESSAGE("shutting down queue_listener for connection_handle: %d\n", connection_handle);
+                        });
+
+                        queue->txcq_poller = std::thread([ = ] (){
+                            try {
+                                txcqPoll(queue);
+                            }
+                            catch (const std::exception& e) {
+                                FABRIC_ERROR_MESSAGE("connection handle: %d error: %s", connection_handle, e.what());
+                            }
+                            catch (...) {
+                                FABRIC_ERROR_MESSAGE("connection handle: %d unknown error", connection_handle);
+                            }
+                            FABRIC_DEBUG_MESSAGE("shutting down txcq_poller for connection_handle: %d\n", connection_handle);
+                        });
+                    }
+                }
+                FABRIC_DEBUG_REM_OP("%s: Waiting for client connect request, pending connections: %ld\n", __func__, contexts.size());
+            }
+            break;
+            case FI_SHUTDOWN:
+                FABRIC_DEBUG_MESSAGE("Disconnect event %d during listen.\n", event);
+            break;
+            default:
+                FABRIC_ERROR_MESSAGE("Unexpected event %d during listen.\n", event);
+                fi_reject(p_libf_context->pep.get(), entry_fi->handle, nullptr, 0);
+            break;
+        };
+    } // while (m_running)
+
+    m_running = false;
+}

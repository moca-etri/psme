+/**
+ * @brief Starts server which grants all FPGAs to hardcoded host
+ */
+int main(int argc, char* argv[]) {
+    if (getuid()) {
+        OPAE_ERR("Root is required.");
+        return 0;
+    }
+
+
+    fpgaof_backend::FpgaofBackendV1 backendV1;
+    auto model = model::Model::get_instance();
+
+	if (!parse_options(argc, argv)) { return 0; }
+
+
+    const auto host_ids = get_host_ids();
+
+    std::vector<HostId> host_uids{};
+    for (const auto& host_id_str: host_ids) {
+        printf("adding host: %s\n", host_id_str.c_str());
+        fpga_guid host_guid;
+        uuid_parse(host_id_str.c_str(), host_guid);
+        host_uids.push_back(host_guid);
+        if (!model->get_hosts().get_hosts().count(host_guid)) {
+            model->get_hosts().add_host(host_guid);
+        }
+    }
+
+    auto i = 0;
+    for (auto& fpga : model->get_devices()) {
+        auto remote_token = fpga.get_remote_token();
+
+        if (host_uids.size() > 1 && i > 1) {
+           model->get_acl().attach(remote_token, host_uids[1]);
+        }
+        else {
+            model->get_acl().attach(remote_token, host_uids[0]);
+        }
+        ++i;
+    }
+
+    backendV1.get_server().start();
+    parse_commands(backendV1);
+    backendV1.get_server().stop();
+}

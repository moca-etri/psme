+    ret = fi_cq_open(domain.get(), &(cq_attr),
+                     &cq_, &(rxcq));
+    if (ret) {
+        FABRIC_WARNING_MESSAGE("error opening rxcq: %d : %s.\n", ret, fi_strerror(-ret));
+        return ret;
+    }
+    rxcq.reset(cq_, FidDeleter<fid_cq>());
+
+    fid_ep* ep_;
+    ret = fi_endpoint(domain.get(), fi.get(), &ep_, nullptr);
+    if (ret) {
+        FABRIC_WARNING_MESSAGE("error creating endpoint, return: %d : %s.\n", ret, fi_strerror(-ret));
+        return ret;
+    }
+    ep.reset(ep_, FidDeleter<fid_ep>());
+
+    if (fi->ep_attr->type == FI_EP_MSG || fi->caps & FI_MULTICAST){
+        ret = fi_ep_bind(ep.get(), &eq->fid, 0);
+        if (ret) {
+            FABRIC_ERROR_MESSAGE("error bounding event_quue to endpoint, return: %d : %s.\n",
+                                 ret, fi_strerror(-ret));
+            return ret;
+        }
+    }
+
+    ret = fi_ep_bind(ep.get(), &txcq->fid, FI_TRANSMIT);
+    if (ret) {
+        FABRIC_ERROR_MESSAGE("error bounding tx completion queue to endpoint, return: %d : %s.\n",

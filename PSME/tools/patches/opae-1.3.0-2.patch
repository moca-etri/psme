+	auto handle = std::find_if(handles_map.begin(), handles_map.end(),
+							   [session_id](
+									   std::pair<RemoteHandle, fpgaof_backend::model::Handle> token_handle_pair) -> bool {
+								   return token_handle_pair.second.get_session_id() == session_id;
+							   });

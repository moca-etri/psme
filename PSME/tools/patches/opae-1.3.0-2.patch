+        FABRIC_ERROR_MESSAGE("error bounding rx completion queue to endpoint, return: %d : %s.\n",
+                             ret, fi_strerror(-ret));
+        return ret;
+    }
+
+    ret = fi_enable(ep.get());
+    if (ret) {
+        FABRIC_ERROR_MESSAGE("failed to enable endpoint, return: %d : %s.\n",
+                             ret, fi_strerror(-ret));
+        return ret;
+    }
+
+    return 0;

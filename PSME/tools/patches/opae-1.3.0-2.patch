+ssize_t send_to_socket(const TransportQueue& queue, char *buffer, size_t length, int32_t timeout)
+{
+    auto tcp_context = dynamic_cast<TcpTransportContext*>(queue.transport_context.get());
+
+    if (!tcp_context) {
+        FABRIC_ERROR_MESSAGE("%s transport context not found\n", __func__);
+        return -1;
+    }
+
+    struct pollfd poll_fd{tcp_context->transport_handle, POLLOUT, 0};
+
+    FABRIC_DEBUG_MESSAGE("%s::%s: Sending %ld bytes on socket %d\n", __FILE__, __func__, length, poll_fd.fd);
+    FABRIC_DEBUG_MESSAGE_DUMP(VERBOSITY_EVERYTHING, buffer, length);
+    FABRIC_DEBUG_TIMING_START1(VERBOSITY_TIMING3, "start:%s", __func__);
+
+    ssize_t tx_size = 0;
+
+    while( tx_size < length ) {
+
+        if (queue.queue_state.load() != QueueState::QUEUE_STATE_RUN) {
+            FABRIC_DEBUG_MESSAGE("%s: queue stop request for connection handle: %d\n",
+                                  __func__, queue.connection_id);
+            break;
+        }
+
+        auto poll_rc = poll(&poll_fd, 1, timeout);
+
+        if (0 == poll_rc) {
+            continue;
+        }
+        else if (poll_rc < 0) {
+            FABRIC_ERROR_MESSAGE(" poll() failed: %s\n", strerror(errno));
+            tx_size = -1;
+            break;
+        }
+
+        if (poll_fd.revents != POLLOUT) {
+            FABRIC_ERROR_MESSAGE("  revents = %d\n", poll_fd.revents);
+            tx_size = -1;
+            break;
+        }
+
+        const auto send_rc = ::send(poll_fd.fd, (buffer+tx_size), (length-tx_size), MSG_DONTWAIT);
+
+        if(send_rc < 0) {
+            if( errno == EINTR || errno == EAGAIN || errno == EWOULDBLOCK) {
+                continue;
+            }
+            FABRIC_WARNING_MESSAGE("Sending data failed: %d.\n", poll_fd.fd);
+            tx_size = -1;
+            break;
+        }
+        tx_size += send_rc;
+    }
+
+    FABRIC_DEBUG_TIMING_STOP1(VERBOSITY_TIMING3, "stop :%s", __func__);
+
+    return tx_size;
+}

+                                          flags,
+                                          event_type);
+
+    OpaeHandleResponse response{};
+
+    result = RemoteFpgaUtils::get_target_features<OpaeHandleRequest, OpaeHandleResponse>(session_handle,
+                                                                                         OPAE_HANDLE,
+                                                                                         opae_handle_request,
+                                                                                         response);
+    if (result) {
+

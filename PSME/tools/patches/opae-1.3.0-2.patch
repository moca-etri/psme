+        }
+
+        FABRIC_DEBUG_TIMING_STOP1(VERBOSITY_TIMING3, "stop :%s", __func__);
+        return -1;
+    }
+    else {
+        fi_eq_cm_entry entry;
+        uint32_t event = 0;
+        ssize_t size = 0;
+
+        while(true){
+            size = fi_eq_sread(ctxt->eq.get(), &(event), &entry, sizeof(entry), TIMEOUT.count(), 0);
+            if(size == 0 || size == -FI_EAGAIN || size == -FI_EINTR) {
+                continue;
+            }
+            break;
+        }
+
+        if(size != sizeof(entry)) {
+            fi_eq_readerr(ctxt->eq.get(), &buf, 0);
+            FABRIC_WARNING_MESSAGE("EQ connect sread, expected: %ld, received: %ld, err: %s, %s.\n", sizeof(entry), size,
+                fi_strerror(int(-size)),
+                fi_eq_strerror(ctxt->eq.get(), buf.prov_errno, buf.err_data, errstr, sizeof(errstr)));
+            FABRIC_DEBUG_TIMING_STOP1(VERBOSITY_TIMING3, "stop :%s", __func__);
+
+            return FABRIC_ERROR_INVALID_HANDLE;
+        }
+
+        if (event != FI_CONNECTED || entry.fid != &ctxt->ep->fid) {
+            fi_eq_readerr(ctxt->eq.get(), &buf, 0);
+            FABRIC_WARNING_MESSAGE("Unknown event when connecting to remote: %s, %s.\n",
+                fi_strerror(-ret),
+                fi_eq_strerror(ctxt->eq.get(), buf.prov_errno, buf.err_data, errstr, sizeof(errstr)));
+            FABRIC_DEBUG_TIMING_STOP1(VERBOSITY_TIMING3, "stop :%s", __func__);
+
+            return FABRIC_ERROR_INVALID_HANDLE;
+        }
+
+        connection_handle = getNextConnectionID(get_transport_protocol());
+        if(connection_handle <= 0) {
+            FABRIC_WARNING_MESSAGE("Invalid connection handle, connect failed\n.");
+            return FABRIC_ERROR_INVALID_HANDLE;
+        }
+
+        if (auto queue = m_queues.create_queue(connection_handle)) {
+
+            char *buffer_block_base = ctxt->rx_buf;
+            for (int32_t count_blk = 0; count_blk < MAX_RDMA_RX_BUFFER_COUNT; count_blk++, buffer_block_base += ctxt->block_size)
+            {
+                // Post receive buffers
+                ret = fi_recv(ctxt->ep.get(), buffer_block_base, ctxt->block_size, fi_mr_desc(ctxt->mr.get()), FI_ADDR_UNSPEC, buffer_block_base);
+                if (ret < 0) {
+                    FABRIC_WARNING_MESSAGE("Error while posting receive buffers on endpoint %p, desc: %s\n.", ctxt->ep, fi_strerror(-ret));
+                    return 0;
+                }
+            }
+
+            queue->transportInfo = tr_info;
+            queue->queue_state = QueueState::QUEUE_STATE_RUN;
+            queue->transport_context = std::move(ctxt);
+
+            queue->queue_listener = std::thread([=] () {
+                    try {
+                        queueListener(queue);
+                    }
+                    catch(const std::exception& e) {
+                        FABRIC_ERROR_MESSAGE("connection handle: %d error: %s", connection_handle, e.what());
+                    }
+                    catch(...) {
+                        FABRIC_ERROR_MESSAGE("connection handle: %d unknown error", connection_handle);
+                    }
+                    FABRIC_DEBUG_MESSAGE("shutting down queue_listener for connection_handle: %d\n", connection_handle);
+                });
+
+            queue->txcq_poller = std::thread([=] () {
+                    try {
+                        txcqPoll(queue);
+                    }
+                    catch(const std::exception& e) {
+                        FABRIC_ERROR_MESSAGE("connection handle: %d error: %s", connection_handle, e.what());
+                    }
+                    catch(...) {
+                        FABRIC_ERROR_MESSAGE("connection handle: %d unknown error", connection_handle);
+                    }
+                    FABRIC_DEBUG_MESSAGE("shutting down txcq_poller for connection_handle: %d\n", connection_handle);
+            });
+
+        } else {
+            FABRIC_WARNING_MESSAGE("Invalid/duplicate connection handle, connect failed\n.");
+        }
+    }
+
+    FABRIC_DEBUG_TIMING_STOP1(VERBOSITY_TIMING3, "stop :%s", __func__);
+    return connection_handle;
+}

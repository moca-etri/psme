+                ret_val = fi_mr_reg(p_libf_context->domain.get(),
+                                    (void*)start_address,
+                                    size,
+                                    p_libf_context->mr_access,
+                                    0, 0, 0,
+                                    &region, nullptr);
+
+                FABRIC_ASSERT((ret_val == 0), "memory registration failed, desc: %s.\n", fi_strerror(-ret_val));
+
+                p_libf_context->addressRegionMap[start_address] = FidMr(region, FidDeleter<fid_mr>());

+	uint64_t timeout = *reinterpret_cast<const uint64_t *>(request_data.data());
+	OPAE_DBG("Timeout= %ld ms", timeout);
+	auto model = fpgaof_backend::model::Model::get_instance();
+	OPAE_DBG("Sessions size: %d", model->get_sessions().size());

+FabricSessionInfoPtr FabricSessions::create_session(EndpointMode mode, FabricHandle handle, const ConnectionInfo& connection_info) {
+    auto session = std::make_shared<FabricSessionInfo>();
+    session->session_id = handle;
+    session->mode = mode;
+    session->connectionInfo = connection_info;
+
+    if (auto admin_queue = session->open_queues.create_queue()) {
+        FABRIC_ASSERT(admin_queue->get_queue_id() == 0, "Admin queue id not zero\n");
+        if (!admin_queue->set_connection_id(handle)) {
+            FABRIC_ERROR_MESSAGE("Failed to add admin queue for connection: %d\n", handle);
+            return nullptr;
+        }
+    }
+
+    LockGuard lk(m_mutex);
+
+    auto ret = m_sessions.insert(SessionsMap::value_type(handle, session));
+    if (ret.second) {
+        return session;
+    }
+    else {
+        FABRIC_ERROR_MESSAGE("TransportQueue for connection %d already exists\n", handle);
+        return nullptr;
+    }

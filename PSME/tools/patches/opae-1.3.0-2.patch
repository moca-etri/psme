+	if (FIELD_VALID(&filter, FPGA_PROPERTY_OBJTYPE)) {
+		if (FPGA_DEVICE == filter.objtype) {
+
+			if (FIELD_VALID(&filter, FPGA_PROPERTY_NUM_SLOTS)) {

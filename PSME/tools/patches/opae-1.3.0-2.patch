+
+int32_t TransportServiceMock::handle_request(const FabricHandle connection_id, const RequestHeader &req_header,
+                                             void* /*host_data*/) {
+
+    //
+    // normal flow is initiator request -> transport -> target callback -> transport -> initiator callback
+    // here we have short circuit: initiator request -> transport -> initiator callback
+    //   the following logic builds a response appropriate for initiator callback
+    //   (it's a merge of target callback and transport in normal flow)
+    //
+
+    response_header = ResponseHeader{};
+    response_header.command = req_header.command;
+    response_header.commandTag = req_header.commandTag;
+    response_header.capsuleType = req_header.capsuleType;
+    response_header.commandType = req_header.commandType;
+
+    // from RESET_RESPONSE_HEADER macro
+    response_header.capsuleLength = sizeof(ResponseHeader);
+    response_header.headerLength  = sizeof(ResponseHeader);
+
+    //
+    // response_header.capsuleLength > response_header.headerLength
+    // triggers trGetResponseData call inside fbResponseCallbackHandler
+    //
+    switch (response_header.command) {
+        case FABRIC_CONNECT:
+            response_header.capsuleLength += sizeof(connection_id);
+            response_data_buffer = ::utils::ByteBuffer(sizeof(connection_id));
+            response_data_buffer.set_le32(0, 100);
+            break;
+        case FABRIC_GET_TARGET_FEATURES: {
+            uint32_t num_matches{4};
+            uint32_t num_tokens = num_matches;
+            response_data_buffer = ::utils::ByteBuffer(sizeof(num_matches)
+                                                       + sizeof(num_tokens)
+                                                       + num_tokens * sizeof(DeviceHandle));
+            size_t pos{0};
+            response_data_buffer.set_le32(pos, num_matches);
+            pos += sizeof(num_matches);
+            response_data_buffer.set_le32(pos, num_tokens);
+            pos += sizeof(num_tokens);
+            for (int i = 0; i < num_tokens; ++i) {
+                response_data_buffer.set_le64(pos, i + 1);
+                pos += sizeof(DeviceHandle);
+            }
+            response_header.capsuleLength += response_data_buffer.size();
+            //
+            // trigger copy data inside FabricEndpoint::getTargetFeature
+            //
+            response_header.requestSize = response_data_buffer.size();
+        }
+            break;
+        default:
+            break;
+    }
+
+    m_callbacks.fbResponseCallbackHandler(connection_id, &response_header);
+
+    return 0;
+}
+
+int32_t TransportServiceMock::get_response_data(const FabricHandle connection_handle, const ResponseHeader& /*resp_header*/,
+                                                void *buffer, const uint32_t length) {
+
+    EXPECT_TRUE(connection_handle > 0);
+
+    EXPECT_LE(length, response_data_buffer.size());
+
+    memcpy(buffer, response_data_buffer.data(), length);
+
+    return FabricStatus::SUCCESS;
+}

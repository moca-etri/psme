+bool FabricEndpoint::fabricDisconnect(FabricHandle session_handle, FabricHandle connection_handle)
+{
+    RequestCapsule req_capsule;
+    RequestHeader  req_header;
+    ResponseCapsule resp_capsule;
+    ConnectionInfo *connection_info = NULL;
+    FabricHandle queue_handle = 0;
+    bool ret_val = true;
+    int16_t status = 0;
+    char static_data[MAX_STATIC_BUFFER_SIZE];
+    DataBuffer host_data{static_data, [](char*){}};
+
+    FABRIC_DEBUG_REM_OP("\t%s : %s, session: %d, handle: %d\n", __FILE__,__func__, session_handle, connection_handle);
+
+    auto session = open_sessions.get_session(session_handle);
+
+    if(!session) {
+        FABRIC_WARNING_MESSAGE("Invalid session handle: %d\n", session_handle);
+        return false;
+    }
+
+    auto queue = session->open_queues.get_queue_by_handle(connection_handle);
+
+    if (!queue) {
+        FABRIC_WARNING_MESSAGE("connection_handle %d not found on session handle: %d\n",
+                               connection_handle, session_handle);
+        return false;
+    }
+
+    if (queue->is_admin_queue()) {
+        // close open devices (closes connected data queues)
+        auto devices = session->open_devices.get_devices();
+        for(auto& device: devices) {
+            //
+            // recursive calls of fabricDisconnect
+            //
+            if (closeFabricDevice(session_handle, device->getDevice())) {
+                FABRIC_WARNING_MESSAGE("Error closing device handle: %ld.\n", device->getDevice());
+            }
+        }
+        // close remaining data/notification queues
+        auto data_queues = session->open_queues.get_data_queues();
+        for (auto& queue: data_queues) {
+            //
+            // recursive calls of fabricDisconnect
+            //
+            fabricDisconnect(session_handle, queue->get_connection_id());
+        }
+    }
+
+    if(session->mode == InitiatorMode) {
+        connection_info = &session->connectionInfo;
+        req_capsule.header = &req_header;
+        RESET_REQUEST_HEADER(req_capsule.header, FABRIC_DISCONNECT, COMMAND_TYPE_FABRIC, CAPSULE_DIRECTION_TARGET);
+        const auto data_size = sizeof(m_endpoint_info[0].hostID)
+                               + sizeof(SessionQueue::Qid)
+                               + connection_info->keyLength;
+        if(data_size > MAX_STATIC_BUFFER_SIZE) {
+            auto buffer_pool = bufferPoolMap.get_buffer_pool(connection_handle);
+            if (buffer_pool) {
+                host_data = get_buffer(buffer_pool, data_size);
+            }
+            else {
+                FABRIC_ERROR_MESSAGE("Error getting buffer for connection_handle: %d.\n", connection_handle);
+            }
+        }
+
+        req_capsule.hostData = host_data.get();
+
+        auto data = req_capsule.hostData;
+        APPEND_DATA_INCR(data, m_endpoint_info[0].hostID);
+        {
+            // todo: ehhh get rid of this macros
+            auto queue_id = queue->get_queue_id();
+            APPEND_DATA_INCR(data, queue_id);
+        }
+        APPEND_N_DATA(data, connection_info->securityKey, connection_info->keyLength);
+        req_capsule.header->capsuleLength += data_size;
+
+        req_capsule.header->commandTag = requestMap.addEntry(queue_handle, 0, req_capsule.header, nullptr);
+        sendAndReceive(connection_handle, req_capsule, resp_capsule);
+        if(resp_capsule.header) {
+            status = resp_capsule.header->status;
+        }
+        else {
+            FABRIC_ERROR_MESSAGE("failed retreiving response for tag: %d.\n", req_capsule.header->commandTag);
+            status = FabricStatus::ERROR;
+        }
+
+        requestMap.removeEntry(req_capsule.header->commandTag);
+
+    } else {
+        status = FabricStatus::SUCCESS;
+    }
+
+    if(status == FabricStatus::SUCCESS) {
+        //if(endpointMode == InitiatorMode) {
+
+        // todo: bufferPoolMap.remove() below should be sufficient
+        //
+        auto buffer_pool = bufferPoolMap.get_buffer_pool(connection_handle);
+        if (buffer_pool) {
+            buffer_pool->freeBuffers();
+        }
+
+        bufferPoolMap.remove(connection_handle);
+
+        trFabricDisconnect(connection_handle, NULL); // Initiate transport disconnect.
+
+        session->open_queues.remove_queue_by_qid(queue->get_queue_id());
+
+        // session_handle == connection_handle) {
+        if (queue->is_admin_queue()) {
+            open_sessions.remove_session(connection_handle);
+        }
+
+    } else {
+        FABRIC_WARNING_MESSAGE("Error closing data queue: %d\n", queue_handle);
+        ret_val = false;
+    }
+
+    return ret_val;
+}

+    hints.reset(fi_allocinfo(), fi_freeinfo);
+    if (!hints) {
+        FABRIC_ERROR_MESSAGE("Error allocating fi_info.\n");
+        return FI_ENOMEM;
+    }
+
+    hints->ep_attr->type = FI_EP_MSG;
+    hints->caps = FI_MSG | FI_RMA;
+    hints->domain_attr->mr_mode = FI_MR_LOCAL | OFI_MR_BASIC_MAP;

+
+int32_t LibfRdmaTransport::write(FabricHandle connection_handle, Iovec *iovec, uint32_t iovec_count, uint32_t length, uint32_t timeout, uint32_t cmd_tag)
+{
+    FABRIC_DEBUG_REM_OP("\t%s : %s, handle: %d, tag: %d\n", __FILE__,__func__, connection_handle, cmd_tag);
+    if(length == 0){
+        return 0;
+    }
+
+    int32_t tx_size = 0;
+
+    FABRIC_DEBUG_MESSAGE("%s: Writing %d bytes on handle %d.\n", __func__, length, connection_handle);
+
+    if (auto queue = m_queues.get_queue(connection_handle)) {
+
+        auto p_libf_context = dynamic_cast<LibfRdmaContext*>(queue->transport_context.get());
+        if (!p_libf_context) {
+            FABRIC_WARNING_MESSAGE("%s transport context not found\n", __func__);
+            return 0;
+        }
+
+        auto details = p_libf_context->rdmaMap.getDetails(cmd_tag);
+
+        FABRIC_ASSERT(details, "Rdma details missing for tag: %d.\n", cmd_tag);
+
+        details->nextAction = TxPollerAction::CQ_SET_STATUS;
+
+        if(length >= MIN_RDMA_TFR_SIZE && details->sglInfo.entries){
+            // Transfer with RDMA.
+            FABRIC_DEBUG_MESSAGE("%s: Performing rdma write on endpoint: %p.\n", __func__, p_libf_context->ep);
+            tx_size = rdmaReadWrite(*p_libf_context,
+                                      iovec,
+                                      iovec_count,
+                                      length,
+                                      details->memoryRegion,
+                                      &details->sglInfo,
+                                      timeout,
+                                      cmd_tag,
+                                      false /*write*/,
+                                      *queue);
+        }
+        else {
+            // Transfer as immediate data.
+            FABRIC_DEBUG_MESSAGE("%s: Sending on endpoint: %p.\n", __func__, p_libf_context->ep);
+            if(length <= p_libf_context->fi->tx_attr->inject_size) {
+                // fi_inject, No completions.
+                details->nextAction = TxPollerAction::CQ_NONE;
+                details->numCompletions = 0;
+            }
+
+            tx_size = sendToEndpoint(*p_libf_context,
+                                       iovec,
+                                       iovec_count,
+                                       length,
+                                       details->memoryRegion,
+                                       cmd_tag,
+                                       timeout,
+                                       *queue);
+            if(tx_size <= 0) {
+                FABRIC_ERROR_MESSAGE("Write error. Closing connection %d\n", connection_handle);
+                queue->queue_state = QueueState::QUEUE_STATE_STOP;
+            }
+        }
+
+        // wait for txcqPoll to ack
+        if(details->nextAction == TxPollerAction::CQ_SET_STATUS) {
+            details->complete_event.wait_for(std::chrono::seconds(30));
+            FABRIC_ASSERT(details->numCompletions == 0,
+                  "Num completions (%d) non zero on complete_event for details: %p.\n",
+                  details->numCompletions.load(), details.get());
+        }
+
+    }
+
+    return tx_size;
+}

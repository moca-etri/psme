+void PeriodicTask::task() {
+    try {
+        while (m_is_running) {
+            try {
+                std::unique_lock<std::mutex> lk(m_mutex);
+                if (m_condition.wait_for(lk, m_interval) == std::cv_status::timeout) {
+                    lk.unlock();
+                    m_task();
+                }
+            }
+            catch (std::exception& e) {
+                FABRIC_ERROR_MESSAGE("PeriodicTask: loop FAILED: %s.\n", e.what());
+            }
+        }
+    }
+    catch (std::exception& e) {
+        FABRIC_ERROR_MESSAGE("PeriodicTask: FAILED: %s.\n", e.what());
+    }

+ssize_t receive_from_socket(const TransportQueue& queue, char *buffer, size_t length, uint32_t timeout)
+{
+    auto tcp_context = dynamic_cast<TcpTransportContext*>(queue.transport_context.get());
+
+    if (!tcp_context) {
+        FABRIC_ERROR_MESSAGE("%s transport context not found\n", __func__);
+        return -1;
+    }
+
+    struct pollfd poll_fd{tcp_context->transport_handle, POLLIN, 0};
+
+    FABRIC_DEBUG_MESSAGE("%s: Receiving %ld bytes on socket %d\n", __func__, length, poll_fd.fd);
+    FABRIC_DEBUG_TIMING_START1(VERBOSITY_TIMING3, "start :receive : 0");
+
+    ssize_t rx_size = 0;
+
+    while(rx_size < length) {
+
+        if (queue.queue_state.load() != QueueState::QUEUE_STATE_RUN) {
+            FABRIC_DEBUG_MESSAGE("%s: queue stop request for connection handle: %d\n",
+                                 __func__, queue.connection_id);
+            break;
+        }
+
+        auto poll_rc = poll(&poll_fd, 1, timeout);
+
+        if (0 == poll_rc) {
+            continue;
+        }
+        else if (poll_rc < 0) {
+            FABRIC_ERROR_MESSAGE(" poll() failed: %s\n", strerror(errno));
+            rx_size = -1;
+            break;
+        }
+
+        if (poll_fd.revents != POLLIN) {
+            FABRIC_ERROR_MESSAGE("  revents = %d\n", poll_fd.revents);
+            rx_size = -1;
+            break;
+        }
+
+        const auto recv_rc = ::recv(poll_fd.fd, buffer+rx_size, (length-rx_size), MSG_DONTWAIT);
+
+        if(recv_rc < 0) {
+            if(errno == EAGAIN || errno == EINTR || errno == EWOULDBLOCK) {
+                continue;
+            }
+            FABRIC_ERROR_MESSAGE("Receiving failed on sock %d : %s\n.", poll_fd.fd, strerror(errno));
+            rx_size = recv_rc;
+            break;
+        } else if( recv_rc == 0 ) {
+            FABRIC_DEBUG_MESSAGE("%s: connection handle: %d Remote end of sock %d has been shutdown/closed\n",
+                    __func__, queue.connection_id, poll_fd.fd);
+            rx_size = 0;
+            break;
+        }
+
+        rx_size += recv_rc;
+    }
+
+    FABRIC_DEBUG_TIMING_STOP1(VERBOSITY_TIMING3, "stop :receive : 0");
+    FABRIC_DEBUG_MESSAGE("%s: Received %ld bytes on socket %d\n", __func__, rx_size, poll_fd.fd);
+    FABRIC_DEBUG_MESSAGE_DUMP(VERBOSITY_EVERYTHING, buffer, rx_size);
+
+    return rx_size;
+}
